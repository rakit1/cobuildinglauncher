<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="custom-dialog-root" stylesheets="@launcher.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cobuilding.ConfirmDialogController">
    <top>
        <HBox fx:id="titleBar" alignment="CENTER" styleClass="title-bar">
            <Label fx:id="titleLabel" styleClass="title-label" text="Подтверждение" />
        </HBox>
    </top>
    <center>
        <VBox alignment="TOP_LEFT" spacing="15.0" styleClass="dialog-content">
            <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0" /></padding>
            <Label fx:id="contentLabel" wrapText="true" />
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="dialog-buttons">
            <padding><Insets top="10.0" right="20.0" bottom="20.0" left="20.0" /></padding>
            <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" styleClass="launch-button" text="OK" />
            <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="button-secondary" text="Отмена" />
        </HBox>
    </bottom>
</BorderPane>